{
    "settings": {
        "create-assets-list": true,
        "naming": "camelcase",
        "output-folder": "./output/asm",
        "object-types": "raw-assets/objects/objecttypes.xml"
    },
    "blank-data": [
        {
            "name": "tileset",
            "size": 1280,
            "output-folder": "./output/asm/blank-data"
        }
    ],
    "tilemaps": [
        {
            "map": "raw-assets/tilemaps/screens.tmj",
            "output-folder": "./output/asm/tilemaps",
            "use-layer-names": true,
            "generate-paths": true,
            "format": "asm",
            "compression": "rle",
            "ignore-hidden-layers": false,
            "section": "BANK_6",
            "tileset": {
                "name": "game-tiles",
                "tileset": "raw-assets/tilesets/game-tileset.tsj",
                "output-folder": "./output/asm/tilesets",
                "replace-flash-with-solid": true,
                "section": "BANK_4"
            }
        }
    ],
    "tilesets": [
        {
            "name": "menu-tiles",
            "tileset": "raw-assets/main-menu/menu-tiles.tsj",
            "output-folder": "./output/asm/main-menu",
            "section": "BANK_4"
        }
    ],
    "sprites": [
        {
            "name": "player-sprite",
            "input": "raw-assets/sprites/player-sprite.png",
            "mask": "raw-assets/sprites/player-sprite-mask.png",
            "paper-colour": "black",
            "output-folder": "./output/asm/sprites",
            "section": "BANK_0"
        }
    ],
    "graphics": [
        {
            "name": "font",
            "input": "raw-assets/graphics/lander-bold.png",
            "paper-colour": "white",
            "output-folder": "./output/asm/graphics",
            "section": "BANK_0"
        },
        {
            "name": "font-compressed",
            "input": "raw-assets/graphics/lander-bold.png",
            "paper-colour": "white",
            "output-folder": "./output/asm/graphics",
            "section": "BANK_0",
            "compression": "zx0"
        },
        {
            "name": "test-error-handling",
            "output-folder": "./output/asm/graphics"
        }
    ],
    "graphics-next": [
        {
            "name": "gunsight",
            "input": "raw-assets/graphics/gunsight.png",
            "format": "asm",
            "output-folder": "./output/asm/graphics-next"
        }
    ],
    "text": [
        {
            "name": "sample-text",
            "input": "raw-assets/text/sample-text.txt"
        }
    ],
    "array-data": [
        {
            "name": "car-models",
            "input": "raw-assets/array-data/cars.txt",
            "output-folder": "./output/asm/array-data",
            "fields": [
                {
                    "name": "car-model-names",
                    "type": "string"
                },
                {
                    "name": "yearStart",
                    "type": "uint8_t"   
                },
                {
                    "name": "yearEnd",
                    "type": "uint8_t"   
                },
                {
                    "name": "launchPrice",
                    "type": "uint16_t"   
                },
                {
                    "name": "depreciation",
                    "type": "uint8_t"   
                }
            ],
            "order": {
                "field": "carModel",
                "direction": "ascending"
            },
            "createStruct": true
        }
    ]
}